<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @location, html: {class: "form"}, remote: true do |f| %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4 class="modal-title text-center" id="myModalLabel">New Location</h4>
    </div>
    <div class="modal-body">
      <div id="raven" class="text-center">
      </div>
        <%= render 'layouts/errors', :object => @location %>
        <div class="form-group">
          <h3 class="text-left">Location Name:</h3>
          <%= f.text_area :name, class: "form-control" %>
        </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-lg btn-default" data-dismiss="modal">Close</button>
      <%= f.submit "Add Location", class: "btn btn-lg btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
