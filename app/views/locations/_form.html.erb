<%= form_for @location, html: {class: "form"}, remote: true do |f| %>
<h2>New Location</h2>
  <%= render 'layouts/errors', :object => @location %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
<% end %>
